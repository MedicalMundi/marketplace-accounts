version: '3'

services:
  app:
    build:
      context: .
      target: php_dev
    ports:
      - "9000:9000"
    depends_on:
      - mysql
      - mysql-test
    links:
      - mysql
      - mysql-test
    volumes:
      - .:/app

  nginx:
    image: nginx:1.22-alpine
    container_name: oauth-server
    ports:
      - "8000:80"
    depends_on:
      - app
    volumes:
      - ./:/app
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf


  mysql:
    image: mariadb:${MARIADB_VERSION:-10.6.16}
    container_name: mysql
    environment:
      MYSQL_ROOT_PASSWORD: 'marketplace'
      MYSQL_DATABASE: ${MARIADB_DB:-marketplace-accounts-db}
      MYSQL_USER: ${MARIADB_USER:-marketplace_accounts_user}
      MYSQL_PASSWORD: ${MARIADB_PASSWORD:-marketplace_accounts_pwd}

  mysql-test:
    image: mariadb:10.6.16
    #command: --default-authentication-plugin=mysql_native_password
    ports:
      - "3366:3306"
      #- "3333:3306" # needed in order to use behat from local host machine
    environment:
      MYSQL_ROOT_PASSWORD: 'password'
      MYSQL_DATABASE: 'test_test'
      MYSQL_USER: 'test'
      MYSQL_PASSWORD: 'test'

  phpmyadmin:
    image: 'phpmyadmin/phpmyadmin'
    ports:
      - '81:80'
    links:
      - mysql
      - mysql-test
    environment:
      MYSQL_USERNAME: root
      MYSQL_ROOT_PASSWORD: password
      #PMA_HOST: mysql
      PMA_ARBITRARY: 1

  clientapp:
    image: gebler/clientapp
    build: ./var/client
    #container_name: oauth-client-app
    ports:
      - "8080:80"

