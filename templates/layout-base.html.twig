{# @see https://getbootstrap.com/docs/5.3/examples/sticky-footer-navbar/ #}

{% extends 'base.html.twig' %}

{% block title %}
    Auth - oe-modules.com
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {#
        see docs: https://developer.mozilla.org/en-US/docs/Web/HTML/Attributes/rel/preload#including_media
        see example: https://github.com/mdn/html-examples/tree/main/link-rel-preload/js-and-css
    #}
    <link rel="preload" href="{{ asset('assets/tbs-532/dist/css/bootstrap.min.css') }}" as="style" type="text/css">
    <link rel="preload" href="{{ asset('/assets/tbs-532/dist/css_custom/sticky-footer-navbar.css') }}" as="style" type="text/css">
    <link rel="preload" href="{{ asset('assets/tbs-532/dist/js/bootstrap.bundle.js') }}" as="script">
    <link rel="preload" href="{{ asset('assets/htmx-196/dist/htmx.min.js') }}" as="script">

    <link href="{{ asset('assets/tbs-532/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/assets/tbs-532/dist/css_custom/sticky-footer-navbar.css') }}" rel="stylesheet">



{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/tbs-532/dist/js/bootstrap.bundle.js') }}"></script>
    <script src="{{ asset('assets/htmx-196/dist/htmx.min.js') }}"></script>
{% endblock %}

{% block body %}

    {% block navigation %}
        {% include 'common/navigation.html.twig' %}
    {% endblock %}

    {% include 'common/_flash_messages.html.twig' %}

    {% block main %}
        <main class="flex-shrink-0">
            <div class="container">
                <h1 class="mt-5">Sticky footer with fixed navbar</h1>
                <p class="lead">Pin a footer to the bottom of the viewport in desktop browsers with this custom HTML and CSS. A fixed navbar has been added with <code class="small">padding-top: 60px;</code> on the <code class="small">main &gt; .container</code>.</p>
                <p>Back to <a href="/docs/5.3/examples/sticky-footer/">the default sticky footer</a> minus the navbar.</p>
            </div>
        </main>
    {% endblock %}

    {% block footer %}
        {% include 'common/footer.html.twig' %}
    {% endblock %}

{% endblock %}
